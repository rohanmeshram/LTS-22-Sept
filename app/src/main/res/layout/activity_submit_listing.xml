<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD2D2"
    tools:context=".Submit_Listing">



    <TextView
        android:id="@+id/textView"
        android:layout_width="417dp"
        android:layout_height="65dp"
        android:layout_marginBottom="5dp"
        android:background="#FBFBF9"
        android:gravity="center"
        android:text="@string/list_your_business_here"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="72dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ltslogo" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="415dp"
        android:layout_height="701dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="379dp"
            android:layout_height="700dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:layout_marginLeft="40dp"
                android:text="@string/enter_title_of_your_company_business"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_title"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:textSize="19sp"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView_cat"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Choose Category"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_parent"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_cat"
                android:background="#FEFEFE"
                android:textSize="19sp"
                android:layout_marginLeft="40dp"
                 />

            <TextView
                android:id="@+id/textView_sub_cat"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7pt"
                android:layout_marginLeft="40dp"
                android:text="Choose Sub-Category"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_child"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_cat"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                />

            <TextView
                android:id="@+id/textView_owner"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Owner's Name"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_owner"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_owner"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:hint=""
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView_email"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter Email ID"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_email"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_email"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView_pass"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter Password"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_pass"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_pass"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView_city"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Select City"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_city"
                android:background="#FEFEFE"
                android:layout_marginLeft="40dp"
                 />

            <TextView
                android:id="@+id/textView_address"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter Company Address"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_address"
                android:layout_width="325dp"
                android:layout_height="85dp"
                android:layout_below="@id/textView_address"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView_pin"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter PinCode"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_pin"
                android:layout_width="325dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_pin"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="textPostalAddress" />

            <TextView
                android:id="@+id/textView_mob"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter Mobile Number"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_mob"
                android:layout_width="335dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_mob"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView_phone"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:paddingTop="7pt"
                android:text="Enter Landline Number"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText_phone"
                android:layout_width="335dp"
                android:layout_height="35dp"
                android:layout_below="@id/textView_phone"
                android:layout_marginLeft="40dp"
                android:background="#FEFEFE"
                android:ems="10"
                android:inputType="number" />

            <Button
                android:id="@+id/button_submit"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15pt"
                android:layout_marginBottom="40pt"
                android:text="Submit"
                android:textSize="20sp"
                app:backgroundTint="#FD0606" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>